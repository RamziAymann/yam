    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow);
  }

  .table-header {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    background: var(--primary);
    color: var(--white);
    padding: 1.5rem;
  }

  .provider-card {
    text-align: center;
    padding: 1rem;
  }

  .provider-card.orange {
    background: rgba(255, 165, 0, 0.1);
    border-radius: 8px;
  }

  .provider-card.canalbox {
    background: rgba(30, 144, 255, 0.1);
    border-radius: 8px;
  }

  .provider-logo {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .provider-rating {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .table-row {
