    gap: 1rem;
  }

  .plan-option {
    padding: 0.8rem;
    background: #f8f9fa;
    border-radius: 6px;
  }

  .plan-name {
    display: block;
    font-weight: 500;
    color: var(--text-light);
    font-size: 0.9rem;
  }

  .price-range {
    margin-bottom: 0.5rem;
  }

  .price-from, .price-to {
    display: block;
    font-size: 0.9rem;
    color: var(--text-light);
  }

  .price-amount {
    font-weight: bold;
    color: var(--primary);
    font-size: 1.2rem;
  }

  .cities-list {
